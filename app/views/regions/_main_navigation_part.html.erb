<% if object.values.first['children'] %>
  <ul class="main_navigation">
    <% object.values.first['children'].each do |name, item| %>
      <li<%= ' class="selected"'.html_safe if item['selected'] && item['children'] %>>
        <%= link_to item['title'], item['path'] %>
        <% if item['children'] %>
          <ul class="sub_navigation">
            <% item['children'].each do |name, item| %>
              <li><%= link_to item['title'], item['path'] %></li>
            <% end %>
          </ul>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>
