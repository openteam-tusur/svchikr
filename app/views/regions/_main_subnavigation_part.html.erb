<% bottom_subnavigation = @secondary_navigation.content.values.first['children'].keys.include?(object.values.last.path.split('/')[2]) if object && @secondary_navigation %>
<div class="submenu_opened<%= ' bottom_subnavigation' if bottom_subnavigation %>">
  <div class='inner'>
    <h3<%= " class='active'" if "#{request.env['PATH_INFO']}/" == object.values.last.path %>><%= link_to object.values.last.title, object.values.last.path %></h3>
    <ul>
      <% object.values.last['children'].each do |name, item| %>
        <li<%= " class='active'" if item['selected'] %>>
          <%= link_to item['title'], item['path'] %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
