<% content_for :content do %>

  <%= content_tag :div, render(:partial => 'regions/right_side'), :class => 'right_side' if @right_side_navigation ||
                                                                                            @right_side_charts ||
                                                                                            @right_size_twitter ||
                                                                                            @right_size_smi_publication %>

  <div class="article">
    <%= render_partial_for_region(@content_first) if @content_first %>
    <%= render_partial_for_region(@news) if @news %>
    <%= render_partial_for_region(@comments) if @comments %>
  </div>

<% end %>

<%= render :template => 'layouts/application' %>
